{% extends '::base_crud.html.twig' %}

{% block body -%}
    <h1>Generos</h1>

    <table class="record_properties table table-striped table-bordered table-condensed table-hover">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('generos') }}">
            Volver al listado
        </a>
    </li>
    <li>
        <a href="{{ path('generos_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
