{% extends '::base_crud.html.twig' %}

{% block body -%}
    <h1>Titulos list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Nrocapitulo</th>
                <th>Duracion</th>
                <th>Temporada</th>
                <th>Subtitulado</th>
                <th>Sinopsis</th>
                <th>Urlvimeo</th>
                <th>Destacado</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('titulos_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                <td>{{ entity.nroCapitulo }}</td>
                <td>{{ entity.duracion }}</td>
                <td>{{ entity.temporada }}</td>
                <td>{{ entity.subtitulado }}</td>
                <td>{{ entity.sinopsis }}</td>
                <td>{{ entity.urlVimeo }}</td>
                <td>{{ entity.destacado }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('titulos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('titulos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('titulos_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
